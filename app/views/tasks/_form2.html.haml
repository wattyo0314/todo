= form_with model: [@list,@task], local: true do |f|
  = render partial: 'shared/error_messages'
  .form-group
    = f.label :title , 'タスクタイトル',class: 'control-label'
    = f.text_field :title, autofocus: true, class: "form-control", placeholder: "タスクを入力してください"
  .form-group
    = f.label :memo , 'メモ', class: 'control-label'
    = f.text_area :memo, autofocus: true, class: "form-control", rows: "10", placeholder: "メモを入力してください"
  .form-group
    = f.label :time, 'タスク開始時間', class: 'control-label'
    = f.time_select :time, class: "form-control"
  %br
    = f.submit "作成する", class: "text-center"